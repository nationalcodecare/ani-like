{
  "name": "animelike",
  "version": "1.0.0",
  "description": "AnimeLike webpage",
  "main": "server.js",
  "scripts": {
    "install-client": "cd client && npm install",
    "build-client": "cd client && npm run build",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm run install-client && npm run build-client",
    "client": "npm start --prefix client",
    "dev": "concurrently \"nodemon server.js\" \"npm run client\"",
    "start": "node server",
    "watch:sass": "node-sass public/sass/main.scss public/css/style.css",
    "watch:js": "parcel watch ./public/js/index.js --out-dir ./public/js --out-file bundle.js",
    "build:js": "parcel build ./public/js/index.js --out-dir ./public/js --out-file bundle.js",
    "compile:sass": "node-sass public/sass/main.scss client/src/styles/css/App.comp.css",
    "prefix:css": "postcss --use autoprefixer -b \"last 10 versions\" client/src/styles/css/App.comp.css -o client/src/styles/css/App.prefix.css",
    "compress:css": "node-sass client/src/styles/css/App.prefix.css client/src/styles/css/App.css --output-style compressed",
    "build:css": "npm-run-all compile:sass prefix:css compress:css"
  },
  "author": "AlexBelz",
  "license": "ISC",
  "dependencies": {
    "@babel/polyfill": "^7.10.4",
    "aws-sdk": "^2.788.0",
    "axios": "^0.19.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-mongo-sanitize": "^2.0.0",
    "express-rate-limit": "^5.1.3",
    "helmet": "^4.0.0",
    "hpp": "^0.2.3",
    "html-to-text": "^5.1.1",
    "js-cookie": "^2.2.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.25",
    "multer": "^1.4.2",
    "multer-sharp-s3": "^0.2.1",
    "nodemailer": "^6.4.11",
    "pug": "^3.0.0",
    "react-google-login": "^5.2.2",
    "sharp": "^0.25.4",
    "slugify": "^1.4.5",
    "validator": "^13.1.1",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.4",
    "concat": "^1.0.3",
    "concurrently": "^5.3.0",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.1.1",
    "parcel-bundler": "^1.12.4",
    "postcss-cli": "^4.1.1",
    "prettier": "^2.0.5"
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
